<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/image_tv_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/image_iv_send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="name" />


    <ImageView
        android:id="@+id/image_iv_send"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_tv_send"
        tools:src="@drawable/bg_barista" />


    <TextView
        android:id="@+id/message_send_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spoqa_han_sans_neo_regular"
        android:lineSpacingExtra="6sp"
        android:textColor="@color/chat_time_color"
        android:textSize="@dimen/font_size_super_small"
        app:layout_constraintBottom_toBottomOf="@id/image_iv_send"
        app:layout_constraintEnd_toStartOf="@id/image_iv_send"
        tools:text="오후 1:00" />

</androidx.constraintlayout.widget.ConstraintLayout>