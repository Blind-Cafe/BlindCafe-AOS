<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View.OnClickListener" />
        <import type="android.view.View"/>
        <import type="androidx.core.content.ContextCompat" />
        <variable
            name="viewModel"
            type="com.abouttime.blindcafe.presentation.chat.quit.confirm.QuitViewModel" />
    </data>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:orientation="vertical"
    android:paddingHorizontal="18dp"
    android:background="@drawable/bg_rounding_3dp"
    android:backgroundTint="@color/gray_900"
    android:paddingTop="30dp"
    android:layout_height="175dp">
    <TextView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="@string/quit_title"
        android:textColor="@color/white"
        android:textSize="@dimen/dialog_reason"
        android:fontFamily="@font/spoqa_han_sans_neo_bold"
        android:id="@+id/tv_title"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quit_subtitle"
        android:textSize="@dimen/font_size_small"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:fontFamily="@font/spoqa_han_sans_neo_regular"
        android:textColor="@color/gray_300"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/steel"
        android:layout_marginTop="30dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="13dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/tv_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:gravity="center"
            android:paddingVertical="11dp"
            android:text="@string/quit_no"
            android:textColor="@color/gray_300"
            android:onClick="@{() -> viewModel.onClickNoButton()}"
            android:textSize="@dimen/dialog_reason" />

        <TextView
            android:id="@+id/tv_yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="@{() -> viewModel.onClickYesButton()}"
            android:layout_weight="1"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:gravity="center"
            android:paddingVertical="11dp"
            android:text="@string/quit_yes"
            android:textColor="@color/main"
            android:textSize="@dimen/dialog_reason"/>


    </LinearLayout>

</LinearLayout>

</layout>