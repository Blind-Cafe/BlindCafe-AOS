<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View.OnClickListener" />

        <import type="android.view.View" />

        <import type="androidx.core.content.ContextCompat" />

        <variable
            name="viewModel"
            type="com.abouttime.blindcafe.presentation.main.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/pb_left_time"
            android:layout_width="236dp"
            android:layout_height="236dp"
            app:cpb_background_progressbar_color="@color/gray_900"
            app:cpb_background_progressbar_width="4dp"
            app:cpb_progress="30"
            app:cpb_progressbar_color="@color/main"
            android:onClick="@{()->viewModel.onClickCircleImageView()}"
            app:cpb_progressbar_width="4dp"
            app:layout_constraintBottom_toTopOf="@id/tv_state_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />


        <TextView
            android:id="@+id/tv_state_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="채팅방으로 가기"
            android:textSize="@dimen/font_size_large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pb_left_time" />

        <TextView
            android:id="@+id/tv_state_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:onClick="@{()->viewModel.onClickTemporaryButton()}"
            android:text="임시 메세지 보내기 버튼"
            android:textSize="@dimen/font_size_large"
            app:layout_constraintEnd_toEndOf="@id/tv_state_title"
            app:layout_constraintStart_toStartOf="@id/tv_state_title"
            app:layout_constraintTop_toBottomOf="@id/tv_state_title"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>