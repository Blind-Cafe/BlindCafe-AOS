<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="150">

        <KeyFrameSet></KeyFrameSet>
    </Transition>



    <ConstraintSet android:id="@+id/start">


        <Constraint
            android:id="@+id/iv_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            motion:layout_constraintBottom_toBottomOf="@id/et_message_input"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@id/et_message_input" />
        <Constraint
            android:id="@+id/iv_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@id/et_message_input"
            motion:layout_constraintStart_toEndOf="@id/iv_gallery"
            motion:layout_constraintTop_toTopOf="@id/et_message_input" />
        <Constraint
            android:id="@+id/et_message_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@id/iv_record"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/bt_send"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            motion:layout_constraintBottom_toBottomOf="@id/et_message_input"
            motion:layout_constraintDimensionRatio="1.5:1"
            motion:layout_constraintEnd_toEndOf="@id/et_message_input"
            motion:layout_constraintTop_toTopOf="@id/et_message_input" />


    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">


        <Constraint
            android:id="@+id/iv_gallery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:visibility="invisible"
            motion:layout_constraintBottom_toBottomOf="@id/et_message_input"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@id/et_message_input" />
        <Constraint
            android:id="@+id/iv_record"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            motion:layout_constraintBottom_toBottomOf="@id/et_message_input"
            motion:layout_constraintStart_toEndOf="@id/iv_gallery"
            motion:layout_constraintTop_toTopOf="@id/et_message_input" />
        <Constraint
            android:id="@+id/et_message_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/bt_send"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:visibility="visible"
            motion:layout_constraintBottom_toBottomOf="@id/et_message_input"
            motion:layout_constraintDimensionRatio="1.5:1"
            motion:layout_constraintEnd_toEndOf="@id/et_message_input"
            motion:layout_constraintTop_toTopOf="@id/et_message_input" />


    </ConstraintSet>
</MotionScene>